<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Havayolu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Havayolu.styles.css" asp-append-version="true" />

    <!--Unbounded Font Family-->
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!--Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header>
        <button class="btn m-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
            <i class="fas fa-bars fs-5"></i>
        </button>
        <hr class="mt-0"/>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h4 class="offcanvas-title" id="offcanvasExampleLabel">Panel</h4>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <a class="fs-5 text-black" style="text-decoration:none; float: left;" asp-controller="Home" asp-action="adminPanel">Bilet Ekle</a>
                <br />
                <br />
                <a class="fs-5 text-black" style="text-decoration:none; float: left;" asp-controller="Home" asp-action="adminTabloBir">Uçuş Tablosu</a>
                <br />
                <br />
                <a class="fs-5 text-black" style="text-decoration:none; float: left;" asp-controller="Home" asp-action="adminTabloİki">Kullanıcı Tablosu</a>
                <br />
                <br />
                <br />
                <a class="fs-5 text-black" style="text-decoration:none; float: left;" asp-controller="Home" asp-action="Index"><i class="fas fa-door-open"></i> Çıkış Yap</a>
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>
