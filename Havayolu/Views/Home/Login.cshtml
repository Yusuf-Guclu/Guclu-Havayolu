<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>




<form asp-action="girisYap" method="post">
    <div class="w-50 bg-white shadow-lg ms-auto me-auto rounded-4 m-5">
        <div class="container">
            <div class="d-flex align-items-center justify-content-center p-5">
                <img src="~/image/Adsız tasarım.png" width="80" height="80" class="me-2" alt="logo" />
                <span class="fw-bold fs-2 text-black" style="font-family: 'Unbounded', sans-serif">GUCLU AIRLINE</span>
            </div>
            <hr />
            <div class="d-flex align-items-center flex-column p-5">
                <h3 class="pt-1 pb-4 fw-bold" style="font-family: 'Unbounded', sans-serif; color: #003580;">Giriş Yap</h3>
                <label style="margin-right: 288px;" for="name">Adı:</label>
                <input type="text" id="name" name="isim" class="w-50 fs-4 rounded-2" autocomplete="off" />
    
                <label class="mt-5" style="margin-right: 270px;" for="lastName">Soyadı:</label>
                <input type="text" id="lastName" name="soyisim" class="w-50 fs-4 rounded-2" autocomplete="off" />
    
                <label class="mt-5" style="margin-right: 285px;" for="password">Şifre:</label>
                <input type="password" id="password" name="sifre" class="w-50 fs-4 rounded-2" autocomplete="off" />
    
                <button class="btn mt-5 mb-4 p-3 fs-5 fw-bold text-white" type="submit" style="background-color: #003580;">Giriş Yap</button>
    
                

                <p class="mt-5">Kayıt olmak için <a asp-controller="Home" asp-action="register" class="fw-bold fs-6" style="cursor: pointer; color: cornflowerblue">Buraya</a> tıklayınız</p>

                <p class="mt-3">Sayfa yöneticisiyseniz <a asp-controller="Home" asp-action="adminLogin" class="fw-bold fs-6" style="cursor: pointer; color: cornflowerblue">Buraya</a> tıklayınız</p>
            </div>
        </div>
    </div>
</form>