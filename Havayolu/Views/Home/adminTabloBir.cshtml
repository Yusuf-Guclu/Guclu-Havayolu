@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container">
    @model IEnumerable<Havayolu.Models.Domain.Person>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Uçuş Türü</th>
                        <th>Nereden</th>
                        <th>Nereye</th>
                        <th>Gidiş Tarihi</th>
                        <th>Dönüş Tarihi</th>
                        <th>Fiyat</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                @foreach (var Person in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Person.ucusTuru</td>
                            <td>@Person.nereden</td>
                            <td>@Person.nereye</td>
                            <td>@Person.gidisTarihi</td>
                            <td>@Person.donusTarihi</td>
                            <td>@Person.fiyat TL</td>
                            <td><a class="btn btn-danger" href="/Home/adminKayitSil?id=@Person.id">Bilet İptal</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>