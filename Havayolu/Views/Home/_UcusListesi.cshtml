@model IEnumerable<Havayolu.Models.Domain.Person>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">


<div class="container">
    @foreach (var Person in Model)
    {
        <div class="border border-1 rounded-2" style="background: linear-gradient(to right, #003580, #1a73e8); padding: 2px;">
            <div class="bg-white rounded-1" style="padding: 1px;">

                <h3 class=" text-center mt-2" style="font-family: Unbounded">Bilet</h3>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Uçuş Türü</th>
                            <th>Nereden</th>
                            <th>Nereye</th>
                            <th>Gidiş Tarihi</th>
                            <th>Dönüş Tarihi</th>
                            <th>Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Person.ucusTuru</td>
                            <td>@Person.nereden</td>
                            <td>@Person.nereye</td>
                            <td>@Person.gidisTarihi</td>
                            <td>@Person.donusTarihi</td>
                            <td>@Person.fiyat</td>
                        </tr>
                    </tbody>
                </table>

                <form asp-action="BiletAl" method="post" class="d-flex justify-content-center mb-2">
                    <input type="hidden" name="ucusId" value="@Person.id" />
                    <input type="hidden" name="ucusTuru" value="@Person.ucusTuru" />
                    <input type="hidden" name="nereden" value="@Person.nereden" />
                    <input type="hidden" name="nereye" value="@Person.nereye" />
                    <input type="hidden" name="gidisTarihi" value="@Person.gidisTarihi" />
                    <input type="hidden" name="donusTarihi" value="@Person.donusTarihi" />
                    <input type="hidden" name="fiyat" value="@Person.fiyat" />

                    <!--<input type="hidden" name="yetiskin" value="1" />
                    <input type="hidden" name="cocuk" value="0" />
                    <input type="hidden" name="bebek" value="0" />-->

                    <div class="d-flex justify-content-center">
                        <button class="btn btn-secondary mb-1 border border-0 text-white" style="background: linear-gradient(to right, #003580, #1a73e8);">Bilet Al</button>
                    </div>
                </form>

            </div>
        </div>
    }
</div>