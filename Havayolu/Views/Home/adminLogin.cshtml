@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Havayolu.styles.css" asp-append-version="true" />

    <!--Unbounded Font Family-->
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!--Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<div class="container">
    <form asp-controller="Home" asp-action="AdminLogin" method="post">
    <h2 class="text-center mb-5">Admin Giriş</h2>


    <div class="row">
        <div class="col-6 text-end">
            <div>
                <label class="fs-5" id="kulad">Kullanıcı Adı</label>
            </div>

            <div class="mt-3">
                <label class="fs-5" id="sfre">Şifre</label>
            </div>
        </div>

        <div class="col-6 text-start">
            <div>
                <input class="w-50 fs-5 pt-1 rounded-1" type="text" autocomplete="off" name="username" for="kulad" />
            </div>

            <div class="mt-2">
                <input class="w-50 fs-5 pt-1 rounded-1" type="password" autocomplete="off" name="password" for="sfre" />
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-5">
        <button class="btn border fs-5">
            Giriş
        </button>
    </div>

    @if(TempData["error"] != null)
    {
        <div class="text-denger">
            @TempData["error"]
        </div>
    }
    </form>
</div>