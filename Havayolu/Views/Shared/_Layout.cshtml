<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Havayolu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Havayolu.styles.css" asp-append-version="true" />

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>

    <!--Unbounded Font Family-->
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!--Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <style>
        body {
            padding-top: 76px;
            background-color: #ffffff;
        }
        .lg {
            background: linear-gradient(to right, #003580, #1a73e8);
            padding: 10px;
            border-radius: 5px;
        }

        .line {
            width: 0%;
            height: 1px;
            background-color: white;
            visibility: hidden;
            transition: all 0.5s ease;
        }

        a:hover + .line {
            width: 100%;
            visibility: visible !important;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background: linear-gradient(to right, #003580, #1a73e8);">
            <div class="container">
                <div class="navbar-brand d-flex align-items-center">
                    <img src="~/image/Adsız tasarım.png" width="50" height="50" class="me-2" alt="logo"/>
                    <span class="fw-bold fs-4" style="font-family: 'Unbounded', sans-serif; cursor: default">GUCLU AIRLINE</span>
                </div>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Anasayfa
                            </a>
                            <div class="line"></div>
                        </li>
                        @if (Context.Session.GetString("adi") != null)
                        {
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-controller="Home" asp-action="privacy">
                                Biletler
                            </a>
                            <div class="line"></div>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item mx-2">
                            <a class="nav-link text-secondary" style="pointer-events: none; cursor: default;" asp-controller="Home" asp-action="privacy" >
                                Biletler
                            </a>
                        </li>
                        }
                        <li class="nav-item dropdown mx-2">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Diğer
                            </a>
                            <div class="line"></div>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="aboutUs">Hakkımızda</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="cookiePolicy">Politikalarımız</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Uçak içi Eğlence</a></li>
                            </ul>
                        </li>
                    </ul>
                    


                   <div>
                        @if (Context.Session.GetString("adi") != null)
                         {

                            <div class="d-flex align-items-center">
                                <div class="mt-3">
                                    <p class="text-white pe-3" style="cursor: default; float: left">Merhaba, @Context.Session.GetString("adi")</p>
                                </div>

                                <div class="dropdown ms-auto">
                                   <button class="btn dropdown-toggle rounded rounded-3 border border-2" style="background-color: transparent;" type="button" id="profilDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                       <i class="fas fa-user rounded rounded-bottom fs-3"></i>
                                   </button>
                                       <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profilDropdown">
                                           <li><a class="dropdown-item text-white" asp-controller="Home" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a></li>
                                       </ul>
                                </div>
                            </div>
                             
                         }
                         else
                         {
                             <div class="d-flex gap-3">
                                 <a class="btn btn-light px-4" asp-controller="Home" asp-action="login">
                                     <span class="fw-bold">Giriş Yap</span>
                                 </a>
                                 <a class="btn text-white" asp-controller="Home" asp-action="register" style="background-color: #1a73e8">
                                     <span class="fw-bold">Üye Ol</span>
                                 </a>
                             </div>
                         }
                    </div>


                </div>
            </div>
        </nav>
    </header>
    <div class="p-0 m-0 bg-white">
        <main role="main" class="bg-white">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container py-5">
            <div class="row">
                <!-- Hizmetlerimiz Bölümü -->
                <div class="col-md-4">
                    <h4 class="mb-4 text-white fw-bold" style="cursor: default;">Hizmetlerimiz</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#online-bilet" class="smooth-scroll">Online Bilet</a></li>
                        <li class="mb-2"><a href="#ek-hizmetler">Ek Hizmetler</a></li>
                        <li class="mb-2"><a href="#uçuş-noktaları">Uçuş Noktaları</a></li>
                    </ul>
                </div>

                <!-- Kurumsal Bölümü -->
                <div class="col-md-4">
                    <a class="mb-4 text-white fw-bold fs-5" asp-controller="Home" asp-action="institutional">Kurumsal</a>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="aboutUs">Hakkımızda</a></li>
                        @if (Context.Session.GetString("adi") != null)
                        {
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy">Biletler</a></li>
                        }
                        else
                        {
                        <li class="mb-2"><a asp-controller="Home" style="pointer-events: none;" class="text-secondary" asp-action="Privacy">Biletler</a></li>
                        }
                        <li class="mb-2"><a asp-controller="Home" asp-action="cookiePolicy">Politikalarımız</a></li>
                    </ul>
                </div>

                <!-- İletişim Bölümü -->
                <div class="col-md-4">
                    <a class="mb-4 text-white fw-bold fs-5" asp-controller="Home" asp-action="Communication">İletişim</a>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#sikça-sorular">Sıkça Sorulan Sorular</a></li>
                        <li class="mb-2"><a href="#SSS">İletişim Bilgileri</a></li>
                    </ul>
                    <div class="mt-4">
                        <h6 class="text-white mb-3" style="cursor: default;">Sosyal Medya</h6>
                        <div class="social-icons">
                            <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Logo ve Copyright -->
            <div class="row mt-5 pt-4 border-top border-secondary position-relative">
                <div class="col-12 text-end mb-4">
                    <img src="~/image/Adsız tasarım.png" alt="Havalimanı" class="footer-logo" />
                </div>
                <div class="col-12 text-center">
                    <p class="mb-5 text-white-50">© 2024 Güçlü Havayolu. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>
    <style>
        footer {
            background: linear-gradient(to bottom, #003580, #001f4d);
            color: white;
            min-height: 400px;
            padding: 60px 0 30px 0;
            position: relative;
            overflow: hidden;
            margin-bottom: -1px;
        }

        /* Footer içeriği için düzenlemeler */
        footer .container {
            position: relative;
            z-index: 1;
            padding-bottom: 20px;
        }

        footer h4 {
            margin-bottom: 20px;
            font-size: 1.3rem;
        }

        footer .list-unstyled li {
            margin-bottom: 12px;
            font-size: 15px;
        }

        footer a {
            color: rgba(255, 255, 255, 0.8) !important;
            text-decoration: none;
            transition: color 0.3s ease;
            line-height: 2;
        }

        footer a:hover {
            color: white !important;
        }

        /* Logo için düzenlenmiş stiller */
        .footer-logo {
            position: absolute;
            top: -160px;
            right: 0;
            height: 110px;
            transition: transform 0.3s ease;
            z-index: 2;
        }

        .footer-logo:hover {
            transform: scale(1.05);
        }

        /* Sosyal medya ikonları için düzenlemeler */
        footer .social-media {
            margin-top: 30px;
        }

        footer .social-media a {
            font-size: 20px;
            margin: 0 15px;
            transition: transform 0.3s ease;
        }

        footer .social-media a:hover {
            transform: translateY(-3px);
        }

        /* Copyright bölümü için düzenlemeler */
        footer .border-top {
            margin-top: 40px;
            padding-top: 20px;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 15px;
            margin-right: 180px;
        }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            color: white !important;
            font-size: 18px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .social-icon:hover {
            background: white;
            color: #003580 !important;
        }

        /* Soru sor kutusu için düzenleme - hover'da hareket yok */
        .ask-question-box {
            background-color: rgba(255, 255, 255, 0.95) !important;
        }

        .ask-question-box:hover {
        }

        .dropdown-menu {
            background-color: #003580;
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
        }

        .dropdown-item {
            color: white !important;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }

        .dropdown-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .dropdown-divider {
            border-color: rgba(255, 255, 255, 0.1);
            margin: 0.5rem 0;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Dropdown menüsünün sadece tıklamada açılması için
        document.addEventListener('DOMContentLoaded', function() {
            var dropdownToggle = document.querySelector('#navbarDropdown');
            var dropdownMenu = dropdownToggle.nextElementSibling;
            
            dropdownToggle.addEventListener('click', function(e) {
                e.preventDefault();
                dropdownMenu.classList.toggle('show');
            });

            // Dropdown dışına tıklandığında menüyü kapat
            document.addEventListener('click', function(e) {
                if (!dropdownToggle.contains(e.target) && !dropdownMenu.contains(e.target)) {
                    dropdownMenu.classList.remove('show');
                }
            });
        });

        // Smooth scroll için JavaScript
        document.querySelectorAll('.smooth-scroll').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    const headerOffset = 80; // Navbar yüksekliği kadar offset
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
